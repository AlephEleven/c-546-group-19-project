<h1>My Clothes</h1>
<div>
    <div>{{error}}</div>
    <a href="/clothes/new">Add +</a>
    <br>
    {{#each clothingItems}}
        <div class="clothing-item-card" id="a{{_id}}">
            <img class="clothing-item-image" alt="{{name}}" src="/uploads/{{image}}">
            <div class="clothing-item-details">
                <h3 class="clothing-item-title">{{name}}</h3>
                <p class="capitalize">Type: {{type}}</p>
                <a class="card-btn" href="clothes/view/{{_id}}">View</a>
                <a class="card-btn" href="clothes/edit/{{_id}}">Edit</a>
                <button class="delete-btn card-btn">Delete</button>
            </div>
        </div>
    {{/each}}
</div>