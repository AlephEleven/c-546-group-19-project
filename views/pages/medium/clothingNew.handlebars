<h1>Add New Clothing Item</h1>
<div class="error-message">{{error}}</div>
<form id="new-clothing-form" method="POST" action="/clothes/new">
    <div id="img-div" class="form-div">
        <img id="placeholder-img" alt="Clothing Item" src="/public/images/placeholder.jpg"><br>
        <label class="input-label" for="img-btn">Add Image *</label>
        <input id="img-btn" name="img" type="file" accept="image/png, image/jpeg" required>
    </div>
    <div class="form-div">
        <div id="name-div">
            <label class="input-label" for="name-input">Clothing Name *</label>
            <input id="name-input" name="name" type="text" required>
        </div>
        <br>
        <div id="type-div">
            <label class="input-label" for="type-input">Type *</label>
            <select id="type-input" name="type" required>
                <option value="" disabled selected>- Select a Type -</option>
                <option value="Top">Top</option>
                <option value="Bottom">Bottom</option>
                <option value="Dress">Dress</option>
                <option value="Shoes">Shoes</option>
                <option value="Accessory">Accessory</option>
                <option value="Outerwear">Outerwear</option>
                <option value="Socks">Socks</option>
            </select>
        </div>
        <br>
        <div>
            <label class="input-label" for="size-input">Size</label>
            <input id="size-input" name="size" type="text">
        </div>
        <br>
        <div>
            <label class="input-label" for="colors-patterns-input">Colors/Patterns</label>
            <input id="colors-patterns-input" name="colorspatterns" type="text">
            <button id="colors-patterns-btn" class="add-btn" type="button">Add</button><br>
            <ul id="colors-patterns-list"></ul>
        </div>
        <br>
        <div>
            <label class="input-label">Seasons</label>
            <input id="winter-input" type="checkbox" name="season[]" value="Winter">
            <label for="winter-input">Winter</label>
            <input id="spring-input" type="checkbox" name="season[]" value="Spring">
            <label for="spring-input">Spring</label>
            <input id="summer-input" type="checkbox" name="season[]" value="Summer">
            <label for="summer-input">Summer</label>
            <input id="fall-input" type="checkbox" name="season[]" value="Fall">
            <label for="fall-input">Fall</label>
        </div>
        <br>
        <div>
            <label class="input-label" for="styles-input">Styles</label>
            <input id="styles-input" name="styles" type="text">
            <button id="styles-btn" class="add-btn" type="button">Add</button><br>
            <ul id="styles-list"></ul>
        </div>
        <br>
        <div>
            <label class="input-label" for="brand-input">Brand</label>
            <input id="brand-input" name="brand" type="text">
        </div>
        <br>
    </div><br>
    <button id="submit-btn" type="submit">Save</button>
</form>