<h1 class="right">{{title}}</h1>


<article class="main">
    <div>
        <h2>User Info</h2>
        <dl>
            <dt>Username</dt>
            <dd>{{username}}</dd>
            <dt>Bio</dt>
            <dd>{{bio}}</dd>
            <dt>Stores</dt>
            <dd>
                {{#if stores.length}}
                <ul> {{#each stores}}
                    <li>    <a href="{{this.website}}"> {{this.name}} </a> </li>
                    {{/each}}
                </ul>
                {{/if}}
            </dd>

            {{#if err}}
            <dd>N/A</dd>
            {{/if}}

        </dl>
    </div>


    <div id="edit_profile">


        <h2>Edit Profile</h2>

        
            {{#if submitE}}
            <p>{{error}}</p>
            {{/if}}


        <form id="cuser" class="cuser" method="POST" action="/profile">

            {{#if userE}}
            <p>{{error}}</p>
            {{/if}}

            <label for="change_username">Change Username</label><br />
            <input type="text" name="username" id="change_username" placeholder="Enter username">
            <button type="submit">submit</button>
        </form>

        <form id="cpassword" class="cpassword" method="POST" action="/profile">

            {{#if PasswordE}}
            <p>{{error}}</p>
            {{/if}}

            <label for="change_password">Change Password</label><br />
            <input type="password" name="password" id="change_password" placeholder="Enter password">
            <button type="submit">submit</button>
        </form>


        <form id="bio" method="POST" action="/profile">

            {{#if bioE}}
            <p>{{error}}</p>
            {{/if}}

            <label for="bio_term">Bio</label> <br />
            <textarea id="bio_term" name="bio" rows="4" cols="50" placeholder="Enter bio"> </textarea>
            <button type="submit">submit</button>
        </form>

        <h3>Add Your Favorite Stores!</h3>


        <form id="stores" method="POST" action="/profile">

            {{#if storeE}}
            <p>{{error}}</p>
            {{/if}}

            <label for="store_name">Store Name</label><br />
            <input type="text" id="store_name" name="storename" placeholder="enter store name">
            <br />

            
            <label for="store_link">Store Link </label><br />
            <input type="text" id="store_link" name="storelink" placeholder ="enter store link">
            <button type="submit">submit</button>
        </form>
    </div>

    <div id="edit_profile">


        <h2>Manage Account</h2>
  
        <br />
        <a href="/profile/delete">Click here to delete account</a>

</article>