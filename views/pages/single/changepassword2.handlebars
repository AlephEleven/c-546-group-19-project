
<h1 class="right">{{title}}</h1>

<div class="profile">

    <article>
        <form action="/profile/password2" method="POST">
        <div id="change_password" class="myform">

            <p>Now you can change password.</p>
            <hr>


            {{#if passwordE}}
                <p class = "error">{{error}}</p>
            {{/if}}
            <label for="psw">Password: must have at least 8 characters</label><br/>
            <input type="password" placeholder="Enter Password" name="password" >
            <br/>
            <label for="psw-repeat">Confirm Password</label><br/>
            <input type="password" placeholder="Confirm Password" name="password2" >
            
            <div>
            <button type="submit">Submit</button>
            </div>
        </div>
        </form>
    </article>
</div>